
<%= form_for @story do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>
<br/>

<%= f.label :description %>
<%= f.text_field :description %>
<br/>

<%= f.label :status %>
<%= f.select(:status, options_for_select(Story::ALLOWED_STATUS.values,@story.status)) %>
<br/>

<%= f.submit %>

<% end %>
